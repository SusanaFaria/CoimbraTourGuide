<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/place_image_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/image_padding</item>
        <item name="android:layout_margin">@dimen/image_margin</item>
    </style>

    <style name="place_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/txt_name_height</item>
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/txt_name_size</item>
    </style>

    <style name="description_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/place_image_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/general_padding</item>
        <item name="android:layout_marginRight">@dimen/general_padding</item>
        <item name="android:padding">@dimen/image_padding</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="phone_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/general_padding</item>
    </style>

    <style name="phone_num">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/general_padding</item>
    </style>

    <style name="text_directions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/txt_url_height</item>
        <item name="android:layout_marginBottom">@dimen/txt_url_marg_bottom</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
